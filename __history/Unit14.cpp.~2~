//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit14.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm14 *Form14;
//---------------------------------------------------------------------------
__fastcall TForm14::TForm14(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm14::Button1Click(TObject *Sender)
{
    int N = StrToInt(Edit1->Text);
    Memo1->Lines->Clear();
    for (int i = 1; i <= N; i++) {
        for (int j = 1; j <= N; j++) {
            Memo1->Lines->Add(IntToStr(i) + " * " + IntToStr(j) + " = " + IntToStr(i * j));
        }
    }
}
//---------------------------------------------------------------------------
