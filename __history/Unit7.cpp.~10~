TForm7 *Form7;

String questions[] = {
    "Функция main обязана возвращать int?",
    "Может ли функция возвращать void?",
    "Может ли одна функция вызывать другую?",
};

int questionIndex = 0;



//---------------------------------------------------------------------------
__fastcall TForm7::TForm7(TComponent* Owner)
	: TForm(Owner)
{
    LabelQuestion->Caption = questions[questionIndex];
}
